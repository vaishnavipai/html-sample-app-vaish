pipeline {
    agent any

    stages {
        //this is stage 1
        stage('Hello') {
            steps {
                //stage close to verify scanner
                echo 'Hello World'
                echo 'version checking'
                //bat or pwsh
                bat """sonar-scanner --version
                echo == checking docker ==>
                docker version
                echo ==> java version ==>
                java --version
                """
            
            }
        }
        //git checkout 
        stage('taking code to github repo') {
            steps {
                echo 'clone a repo to project'
                git url: "${REPO_NAME}", branch: "${BRANCH_NAME}"
            }
        }
    }
}
